<Container>:
	rows: 2

	rst: rst
	reloadBtn: reloadBtn
	courseSpinner: courseSpinner
	groupSpinner: groupSpinner
	fontSpinner: fontSpinner

	GridLayout:
		cols: 4
		size_hint_y: 0.055

		Spinner:
			id: courseSpinner
			size: (150, 44)
			on_text: root.courseChanged()

		Spinner:
			id: groupSpinner
			size: (150, 44)
			on_text: root.groupChanged()

		Spinner:
			id: fontSpinner
			size: (150, 44)
			on_text: root.fontChanged()

		Button:
			id: reloadBtn
			disabled: False

	BoxLayout:
		RstDocument:
			id: rst
			text: ""
			base_font_size: "16sp"
			on_text: root.scheduleChanged()