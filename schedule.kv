

<Container>:
	rows: 2

	rst: rst
	reloadBtn: reloadBtn
	courseSpinner: courseSpinner
	groupSpinner: groupSpinner

	GridLayout:
		cols: 3
		size_hint_y: 0.06

		Spinner:
			id: courseSpinner
			value: "Курс"
			size: (150, 44)
			on_text: root.courseChanged()

		Spinner:
			id: groupSpinner
			value: "Группа"
			size: (150, 44)
			on_text: root.groupChanged()

		Button:
			id: reloadBtn
			text: "Update"
			disabled: False

	BoxLayout:
		RstDocument:
			id: rst
			text: ""
			base_font_size: '25sp'